{
  "name": "ijhttp-vscode-extension",
  "displayName": "ijhttp VS Code Extension",
  "description": "Execute JetBrains ijhttp .http files directly in VS Code with environment support",
  "version": "0.0.1",
  "publisher": "rafaelcalves",
  "author": {
    "name": "Rafael Correa Alves",
    "email": "rafael.ca.dev@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rafaelcalves/ijhttp-vscode-extension.git"
  },
  "homepage": "https://github.com/rafaelcalves/ijhttp-vscode-extension#readme",
  "bugs": {
    "url": "https://github.com/rafaelcalves/ijhttp-vscode-extension/issues"
  },
  "keywords": [
    "http",
    "api",
    "testing",
    "ijhttp",
    "jetbrains",
    "rest",
    "client"
  ],
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Testing",
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ijhttp-vscode-extension.exec",
        "title": "Run with ijhttp"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "ijhttp-vscode-extension.exec",
          "when": "resourceExtname == '.http'",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vscode-test",
    "test:watch": "npm run compile && npm run test -- --watch",
    "run-extension": "npm run compile && code --extensionDevelopmentPath=. --new-window",
    "pre-commit": "npm run compile && npm run lint && npm run test",
    "validate": "npm run pre-commit",
    "dev": "npm run compile && npm run watch",
    "clean": "rm -rf out",
    "rebuild": "npm run clean && npm run compile",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sinon": "^17.0.3",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "sinon": "^19.0.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "git add"
    ]
  }
}
